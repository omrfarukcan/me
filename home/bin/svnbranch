#!/bin/bash
#
# Wrapper to 'svncopy' to create branches.
#
# Recai Okta≈ü <roktas@omu.edu.tr>
# Last modified: Tue, 24 Aug 2004 10:03:28 +0300


if [ $# -eq 0 ]; then
	echo 2>&1 "Usage: $0 BRANCH [LOG]"
	exit 1
fi

branch=$1; shift; log="$@"

if [ -z "$log" ]; then
	log="Created '$branch' branch."
fi	

svncopy branches $branch -m "$log"
